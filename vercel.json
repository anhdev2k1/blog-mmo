{
    "version": 2,
    "builds": [
      {
        "src": "app/api/**/*.ts",
        "use": "@vercel/node",
        "config": {
          "maxLambdaSize": "50mb"
        }
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/app/api/$1" },
      { "src": "/(.*)", "dest": "/$1" }
    ]
  }
  